# Server
PORT=5000

# MongoDB connection string (get this from MongoDB Atlas)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/yourDB?retryWrites=true&w=majority

# JWT Secret for signing tokens (choose a long, random string)
JWT_SECRET=your_super_secret_key_here

# JWT Token Expiration Duration (e.g. 1h, 2d, 7d)
JWT_EXPIRES_IN=7d
